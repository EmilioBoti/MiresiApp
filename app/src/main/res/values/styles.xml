<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="fieldsLogin">
        <item name="android:layout_marginStart">@dimen/dimen_40</item>
        <item name="android:layout_marginEnd">@dimen/dimen_40</item>
        <item name="android:layout_marginBottom">@dimen/dimen_40</item>
    </style>
    <style name="fieldInput">
        <item name="android:padding">@dimen/dimen_15</item>
    </style>
    <style name="selectSpinner">
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
    </style>
    <style name="subTitleInfo">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/dimen_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimenst_22</item>
    </style>
    <style name="tagForum">
        <item name="android:paddingTop">@dimen/dimen_3</item>
        <item name="android:paddingBottom">@dimen/dimen_3</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
        <item name="android:background">@drawable/tag_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimenst_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_5</item>

    </style>
    <style name="inputText" parent="Theme.MiresiApp">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimenst_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
    </style>
    <style name="chipsStyle" parent="Theme.MiresiApp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="settingsTitle" parent="Theme.MiresiApp">
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textSize">@dimen/dimenst_20</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
    </style>
    <style name="settingsSubTitle" parent="Theme.MiresiApp">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">@dimen/dimenst_25</item>
        <item name="android:layout_marginStart">@dimen/dimen_5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_20</item>
    </style>
</resources>
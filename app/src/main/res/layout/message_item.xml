<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/indigo_blue"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_100"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_3"
        android:elevation="@dimen/dimen_4"
        app:cardBackgroundColor="@color/green_turquoise"
        app:cardCornerRadius="@dimen/dimen_15"
        app:contentPaddingBottom="@dimen/dimen_5"
        app:contentPaddingLeft="@dimen/dimen_10"
        app:contentPaddingRight="@dimen/dimen_10"
        app:contentPaddingTop="@dimen/dimen_5"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_4"
                android:text="@string/messenge"
                android:textColor="@color/white"
                android:textSize="@dimen/dimenst_16"
                android:textIsSelectable="true"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dimen_4"
                android:text="@string/from"
                android:textColor="@color/white"
                android:textSize="@dimen/dimenst_12" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
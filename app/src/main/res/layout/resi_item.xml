<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentPadding="@dimen/dimen_10"
        android:layout_margin="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="@dimen/dimen_5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imgResi"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_100"
                android:cropToPadding="true"
                android:src="@drawable/barcelona" />

            <TextView
                android:id="@+id/nameResi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/name"
                android:textSize="@dimen/dimenst_20"
                android:textColor="@color/black"
                android:layout_below="@id/imgResi"
                />

            <TextView
                android:id="@+id/descripResi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameResi"
                android:layout_gravity="center"
                android:text="@string/name"
                android:textColor="@color/black_200"
                android:textSize="@dimen/dimenst_15" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
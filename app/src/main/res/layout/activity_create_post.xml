<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.CreatePost"
    android:background="@drawable/bg_message_box"
    >
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/subTopBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/btnGoBack"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createPost"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/dimenst_20"
            android:textStyle="bold"
            />
    </com.google.android.material.appbar.MaterialToolbar>
    <LinearLayout
        android:id="@+id/selectContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTopBar"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_40"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            app:boxCornerRadiusBottomEnd="@dimen/dimen_20"
            app:boxCornerRadiusTopStart="@dimen/dimen_20"
            app:boxCornerRadiusBottomStart="@dimen/dimen_20"
            app:boxCornerRadiusTopEnd="@dimen/dimen_20"
            app:boxBackgroundColor="@color/green_200"
            app:boxStrokeColor="@color/blue_200"
            app:boxStrokeWidth="@dimen/dimen_1"
            app:boxBackgroundMode="outline"

            >

            <AutoCompleteTextView
                android:id="@+id/cities"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/city"
                android:textColor="@color/black"
                android:background="@null"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="1"
                android:textAlignment="center"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            app:boxCornerRadiusBottomEnd="@dimen/dimen_20"
            app:boxCornerRadiusTopStart="@dimen/dimen_20"
            app:boxCornerRadiusBottomStart="@dimen/dimen_20"
            app:boxCornerRadiusTopEnd="@dimen/dimen_20"
            app:boxBackgroundColor="@color/green_200"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/blue_200"
            app:boxStrokeWidth="@dimen/dimen_1"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            >

            <AutoCompleteTextView
                android:id="@+id/residences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/residence"
                android:textColor="@color/black_200"
                android:background="@null"
                android:ellipsize="end"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                android:dropDownSelector="@drawable/spinner_style"
                android:inputType="none"
                android:maxLines="1"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            app:boxCornerRadiusBottomEnd="@dimen/dimen_20"
            app:boxCornerRadiusTopStart="@dimen/dimen_20"
            app:boxCornerRadiusBottomStart="@dimen/dimen_20"
            app:boxCornerRadiusTopEnd="@dimen/dimen_20"
            app:boxStrokeColor="@color/blue_200"
            app:boxBackgroundColor="@color/green_200"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="@dimen/dimen_1"
            app:endIconDrawable="@drawable/arrow_drop_down_24"
            >

            <AutoCompleteTextView
                android:id="@+id/rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/room"
                android:textColor="@color/black"
                android:background="@null"
                android:dropDownSelector="@drawable/spinner_style"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="1"
                tools:ignore="LabelFor"
                android:paddingTop="@dimen/dimen_5"
                android:paddingBottom="@dimen/dimen_5"
                />

        </com.google.android.material.textfield.TextInputLayout>
       <!--<Spinner
            android:id="@+id/cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/selectSpinner"
            android:tag="@string/city"
            android:padding="@dimen/dimen_5"
            android:background="@drawable/spinner_style"
            android:gravity="center_horizontal"
            android:spinnerMode="dialog"
            />
        <Spinner
            android:id="@+id/residences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/selectSpinner"
            android:spinnerMode="dialog"
            android:padding="@dimen/dimen_5"
            android:background="@drawable/spinner_style"

            />
        <Spinner
            android:id="@+id/rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5"
            android:spinnerMode="dialog"
            style="@style/selectSpinner"
            android:background="@drawable/spinner_style"
            />-->
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dateStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectContainer"
        android:layout_margin="@dimen/dimen_20"
        app:startIconDrawable="@drawable/date_range_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFiel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textField"
        android:layout_margin="@dimen/dimen_20"
        app:startIconDrawable="@drawable/date_range_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreatePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/createPost"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_10"
        android:enabled="true"
        android:padding="@dimen/dimen_20"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
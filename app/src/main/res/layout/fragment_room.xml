<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.RoomFragment"
    android:background="@drawable/bg_message_box"
    >
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/subTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/green_turquoise"
        android:alpha="1"
        android:elevation="@dimen/dimen_4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post"
            android:textColor="@color/white"
            android:textSize="@dimen/dimenst_25"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_24"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_gravity="end"
            />
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0"
        app:layout_constraintTop_toBottomOf="@id/subTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/post_item"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createPoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dimen_15"
        app:tint="@color/white"
        android:src="@drawable/add_24"
        android:backgroundTint="@color/green_turquoise"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
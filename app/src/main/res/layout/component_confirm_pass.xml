<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/confirmPassfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/passwordfield"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/fieldsLogin"
        >
        <TextView
            android:id="@+id/confirmPassTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmpassTitle"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dimen_50"
            android:layout_marginBottom="@dimen/dimen_10"
            />

        <EditText
            android:id="@+id/confimPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_corner"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/remove_red_eye_24"
            android:layout_marginBottom="@dimen/dimen_10"
            style="@style/fieldInput"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/blue_200"
            android:layout_marginStart="@dimen/dimen_5"
            android:textStyle="bold"
            />
    </LinearLayout>

</merge>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.miresiapp" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiresiApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m" >
        <activity
            android:name=".views.activities.CreatePost"
            android:exported="false" />
        <activity
            android:name=".views.activities.MessengerActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.ResiInfoActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.SearcherActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.DashBoardActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".views.activities.MainBaseActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.BaseRegister"
            android:exported="true"
            android:theme="@style/splashScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>